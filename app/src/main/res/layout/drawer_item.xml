<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
			  xmlns:tools="http://schemas.android.com/tools"
			  android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="2dp"
    android:paddingTop="2dp"
    android:paddingRight="2dp"
    android:paddingBottom="12dp"
    android:orientation="vertical" >

    <TextView
		android:id="@+id/title"
		android:layout_width="match_parent"
		android:layout_height="0dp"
		android:layout_weight="2"
		android:paddingLeft="2dp"
		android:paddingRight="2dp"
		android:textSize="@dimen/navigation_drawer_text_size_title"
		android:textColor="?attr/appTextColor"
		android:maxLines="1"
		android:ellipsize="marquee"
		android:drawableTint="?attr/appTextColor"
		android:drawablePadding="8dp"
		tools:ignore="UnusedAttribute"/>
    
    <TextView
        android:id="@+id/text"
	    android:layout_width="wrap_content"
    	android:layout_height="0dp"
		android:layout_weight="1"
        android:paddingLeft="2dp"
		android:paddingRight="2dp"
        android:textSize="@dimen/navigation_drawer_text_size"
        android:textColor="?attr/appHintColor"/>
    
</LinearLayout>
