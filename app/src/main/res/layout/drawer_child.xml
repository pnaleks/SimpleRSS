<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
    android:layout_height="wrap_content"
	android:paddingLeft="2dp"
    android:paddingTop="2dp"
    android:paddingRight="2dp"
    android:paddingBottom="12dp"
    android:orientation="vertical"
	tools:ignore="RtlHardcoded,RtlSymmetry">

    <TextView
		android:id="@+id/title"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:paddingLeft="@dimen/action_button_min_width"
		android:textSize="@dimen/navigation_drawer_text_size_title"
		android:textColor="?attr/appTextColor"/>

    <TextView
        android:id="@+id/text"
	    android:layout_width="match_parent"
    	android:layout_height="wrap_content"
        android:paddingLeft="@dimen/action_button_min_width"
        android:textSize="@dimen/navigation_drawer_text_size"
        android:textColor="?attr/appHintColor"/>
    
</LinearLayout>
